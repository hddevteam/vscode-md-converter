{
  "name": "document-md-converter",
  "displayName": "Document Converter",
  "description": "Convert Word to Markdown, Excel to Markdown, and PDF to TXT with batch processing support",
  "version": "0.0.1",
  "publisher": "document-converter-dev",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other",
    "Formatters"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "document-md-converter.convertWordToMarkdown",
        "title": "Convert Word to Markdown",
        "category": "Document Converter"
      },
      {
        "command": "document-md-converter.convertExcelToMarkdown",
        "title": "Convert Excel to Markdown",
        "category": "Document Converter"
      },
      {
        "command": "document-md-converter.convertPdfToText",
        "title": "Convert PDF to Text",
        "category": "Document Converter"
      },
      {
        "command": "document-md-converter.batchConvert",
        "title": "Batch Convert Documents",
        "category": "Document Converter"
      },
      {
        "command": "document-md-converter.openConverter",
        "title": "Open Document Converter",
        "category": "Document Converter",
        "icon": "$(file-text)"
      },
      {
        "command": "document-md-converter.testPdfConversion",
        "title": "Test PDF Conversion",
        "category": "Document Converter"
      },
      {
        "command": "document-md-converter.debugPdfEnvironment",
        "title": "Debug PDF Environment",
        "category": "Document Converter"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .docx || resourceExtname == .doc",
          "command": "document-md-converter.convertWordToMarkdown",
          "group": "document-converter"
        },
        {
          "when": "resourceExtname == .xlsx || resourceExtname == .xls || resourceExtname == .csv",
          "command": "document-md-converter.convertExcelToMarkdown",
          "group": "document-converter"
        },
        {
          "when": "resourceExtname == .pdf",
          "command": "document-md-converter.convertPdfToText",
          "group": "document-converter"
        },
        {
          "when": "resourceIsFolder",
          "command": "document-md-converter.batchConvert",
          "group": "document-converter"
        }
      ],
      "commandPalette": [
        {
          "command": "document-md-converter.convertWordToMarkdown",
          "when": "resourceExtname == .docx || resourceExtname == .doc"
        },
        {
          "command": "document-md-converter.convertExcelToMarkdown",
          "when": "resourceExtname == .xlsx || resourceExtname == .xls || resourceExtname == .csv"
        },
        {
          "command": "document-md-converter.convertPdfToText",
          "when": "resourceExtname == .pdf"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "documentConverter",
          "name": "Document Converter",
          "when": "workspaceFolderCount > 0",
          "icon": "$(file-text)"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "document-converter",
          "title": "Document Converter",
          "icon": "$(file-text)"
        }
      ]
    },
    "configuration": {
      "title": "Document Converter",
      "properties": {
        "documentConverter.outputDirectory": {
          "type": "string",
          "default": "",
          "description": "Default output directory for converted documents (leave empty to use same directory as source)"
        },
        "documentConverter.maxRowsExcel": {
          "type": "number",
          "default": 1000,
          "description": "Maximum number of rows to display per Excel sheet"
        },
        "documentConverter.preserveFormatting": {
          "type": "boolean",
          "default": true,
          "description": "Preserve text formatting (bold, italic) when converting"
        },
        "documentConverter.autoOpenResult": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open converted files"
        },
        "documentConverter.showWelcomeMessage": {
          "type": "boolean",
          "default": true,
          "description": "Show a welcome message when the extension is activated"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.4",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "csv-parser": "^3.2.0",
    "docx": "^9.5.1",
    "mammoth": "^1.9.1",
    "pdf-parse": "^1.1.1",
    "xlsx": "^0.18.5"
  }
}
